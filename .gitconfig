[user]
  name = Fedor Indutny
  email = fedor.indutny@gmail.com
[core]
  editor = vim
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log --stat
  lc = log -p -n1

